<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context="com.example.anonymous.caffeinetrackerii.CaffeineTrackerII">


    <Spinner
        android:layout_marginBottom="20dp"
        android:id="@+id/beverage_spinner"
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />

    <Spinner
        android:layout_marginBottom="20dp"
        android:layout_below="@id/beverage_spinner"
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:id="@+id/teaCoffee"/>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:layout_below="@id/teaCoffee"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="NUMBER OF PACKETS CONSUMED"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/quantity"
            android:textSize="15sp"
            android:layout_weight="1"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0"
            android:textSize="15sp"
            android:layout_weight="0.1"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submit"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/linear"/>

</RelativeLayout>
